<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('activerecord.models.user.other') %></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<% if flash[:notice] %>
    <div class="alert alert-<%= alert %>" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<ul class="breadcrumb">
  <li><%= link_to 'Home', dashboard_url %></li>
  <li class="active"><%= t('text.user.list') %></li>
</ul>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t('text.user.list') %>
        <div class="pull-right">
          <%= link_to "<i class='fa fa-edit fa-fw'></i>#{t('text.user.new')}".html_safe, new_user_path %>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th>ID</th>
              <th><%= t('activerecord.attributes.user.name') %></th>
              <th><%= t('text.data') %></th>
              <% if current_user && (current_user.editor? || current_user.administrator?) %>
                  <th></th>
              <% end %>
            </tr>
            </thead>
            <tbody>
            <% if @users.any? %>
                <% @users.each do |user| %>
                    <tr class="odd gradeX">
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.created_at.strftime('%d/%m/%Y') %></td>
                      <% if current_user && (current_user.editor? || current_user.administrator?) %>
                          <td>
                            <%= link_to image_tag('edit.png', title: 'Editar'), edit_user_path(user) %>&nbsp;&nbsp;
                            <%= link_to image_tag('remove.png', title: 'Remover'), user, method: :delete, data: {confirm: t('text.user.delete')} %>
                          </td>
                      <% end %>
                    </tr>
                <% end %>
            <% else %>
                <tr class="odd gradeX">
                  <td colspan="4"><%= t('text.user.not_found') %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
<!-- /.row -->