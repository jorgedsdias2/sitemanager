<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Páginas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<% if flash[:notice] %>
    <div class="alert alert-<%= alert %>" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p id="notice"><%= notice %></p>
    </div>
<% end %>

<ul class="breadcrumb">
    <li><%= link_to 'Home', dashboard_url %></li>
    <li class="active">Listagem de Páginas</li>
</ul>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Listagem de Páginas
              <div class="pull-right">
                <%= link_to '<i class="fa fa-edit fa-fw"></i>Cadastrar Nova Página'.html_safe, new_page_path %>
              </div>
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
              <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                              <th>ID</th>
                              <th>Título</th>
                              <th>Criado por</th>
                              <th>Data</th>
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <% if @pages.any? %>
                            <% @pages.each do |page| %>
                              <tr class="odd gradeX">
                                  <td><%= page.id %></td>
                                  <td><%= page.title %></td>
                                  <td><%= page.user.name %></td>
                                  <td><%= page.created_at.strftime('%d/%m/%Y') %></td>
                                  <td>
                                  <%= link_to image_tag('edit.png', title: 'Editar'), edit_page_path(page) %>&nbsp;&nbsp;
                                  <%= link_to image_tag('remove.png', title: 'Remover'), page, method: :delete, data: { confirm: 'Quer mesmo remover essa página?' } %>
                                  </td>
                              </tr>
                            <% end %>
                          <% else %>
                            <tr class="odd gradeX">
                              <td colspan="5">Nenhuma página encontrada</td>
                            </tr>
                          <% end %>
                      </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
  </div>
</div>
<!-- /.row -->