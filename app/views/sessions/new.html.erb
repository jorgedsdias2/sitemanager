<div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><%= t('text.administrative_panel') %></h3>
        </div>
        <div class="panel-body">
            <% if flash[:notice] %>
                <div class="alert alert-warning" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p id="notice"><%= notice %></p>
                </div>
            <% end %>
            <%= form_tag 'login' do %>
                <fieldset>
                    <div class="form-group">
                        <%= text_field(:session, :email, class: 'form-control', placeholder: 'E-mail') %>
                    </div>
                    <div class="form-group">
                        <%= text_field(:session, :password, type: 'password', class: 'form-control', placeholder: 'Senha') %>
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <%= submit_tag("Login", class: 'btn btn-lg btn-success btn-block') %>
                </fieldset>
            <% end %>
        </div>
    </div>
</div>